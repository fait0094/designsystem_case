    grid-template-columns: repeat(2, 1fr);
    gap: 15px;
    grid-column-gap: 10rem;
  }

  .section_2 div h5 {
    margin-bottom: 10px;
  }

  .betalingsmetoder {
    align-self: end;
  }

  .tilmeld {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .socials {
    display: flex;
  }

  /* Section 3 */
  .section_3 {
    background-color: var(--customBlack);
    color: white;
  }

  .section_3 .container,
  .section_3 .container div {
    display: flex;
  }
  .section_3 .container {
    gap: 100px;
  }

  .section_3 .container div {
    gap: 10px;
    white-space: nowrap;
  }

  /* Fælles styling */
